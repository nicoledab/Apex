public with sharing class ChildInfoController {
    @AuraEnabled
    public static Map<String, Object> getInitData(String recordId) {
        // 어린이 정보
        Child__c objChild = [
                SELECT Id, Name, RecordTypeId, Country__c, Country__r.Name, Country__r.NameKOR__c, City__c, Community__c ,ChildNo__c ,Sex__c, BirthDate__c, Language__c,
                       CityKOR__c ,CommunityKOR__c, fm_Age__c, SexKOR__c, fm_SexKOR__c, NameKOR__c, ru_TotalChildBenefit__c, FirstSupportDate__c, OrganizationName__r.Name, ru_LastPictureDate__c
                FROM Child__c
                WHERE Id = :recordId
        ];

        String recordTypeName = '';
        Id DomesticChild = Schema.SObjectType.Child__c.getRecordTypeInfosByDeveloperName().get('DomesticChild').getRecordTypeId();
        Id OverseasChild = Schema.SObjectType.Child__c.getRecordTypeInfosByDeveloperName().get('OverseasChild').getRecordTypeId();
        if (objChild.RecordTypeId == DomesticChild) {
            recordTypeName = '국내아동';
        }
        else if (objChild.RecordTypeId == OverseasChild) {
            recordTypeName = '해외아동';
        }

        // 이미지 조회
        List<ChildPicture__c> listChildPicture = new List<ChildPicture__c>();
        listChildPicture = [
                SELECT Id, CreatedDate, Child__c, fm_URL__c, ChildNo__c, Folder__c
                FROM ChildPicture__c
                WHERE Child__c = :recordId
                ORDER BY Folder__c asc
        ];

        Map<String, Object> ReturnValue = new Map<String, Object>{
                'recordTypeName' => recordTypeName,
                'objChild' => objChild,
                'listChildPhoto' => listChildPicture
        };

        return ReturnValue;
    }
